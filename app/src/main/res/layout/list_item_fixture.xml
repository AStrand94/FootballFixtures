<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <TextView
        android:id="@+id/fixture_home_team_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#000"
        android:layout_alignBottom="@+id/fixture_result_textview"
        android:layout_alignParentStart="true"
        android:maxLength="22"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#000"
        android:id="@+id/fixture_result_textview"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="15sp"
        android:id="@+id/fixture_away_team_textview"
        android:gravity="right"
        android:layout_alignBottom="@+id/fixture_result_textview"
        android:layout_alignParentEnd="true"
        android:maxLength="22"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fixture_date_textview"
        android:layout_below="@+id/fixture_home_team_textview"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/status_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fixture_result_textview"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>